@using Examination_system.Models.View_Models;
@model GenertaeExamModel
@{
    SelectList courses =
        new SelectList(Model.Courses, "CrsId", "CrsName");//Explicit casting
}
@{
    Layout = "_Layout";
}

<h1 class="mb-5 text-center">new <span class="text-danger">Exam</span> </h1>
<div style="width:30%; margin-left:auto; margin-right:auto; ">
    <form method="get" asp-action="GenerateExam" asp-controller="Instructor">

        <div>
            <label asp-for="MCQ_number" class="mb-1"></label>
            <input asp-for="MCQ_number" class="form-control" />
            <span asp-validation-for="MCQ_number" class="text-danger"></span>
        </div>
        <div>

            <label asp-for="TF_number" class="mb-1"></label>
            <input asp-for="TF_number" class="form-control" />
            <span asp-validation-for="TF_number" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="CrsId" class="mb-1">Course</label>

            <select class="form-control" id="courseSelect" asp-for="CrsId" asp-items="courses">
                <option value="0">--Select Course--</option>
            </select>

        </div>
        <br />
        <br />
        <input type="submit" value="Generate Exam" class="btn btn-outline-success" />
    </form>
    <br />

    <a href="/instructor/Index" class="btn btn-outline-danger">Back To Login Page</a>

</div>
